<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:App/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="boodil-widget" type="host">https://widget.boodil.com</value>
                <value id="ably-js" type="host">https://rest.ably.io</value>
                <value id="ably-realtime" type="host">https://internet-up.ably-realtime.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="vuetify-css" type="host">https://cdnjs.cloudflare.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="boodil-api" type="host">https://api-test.boodil.com</value>
                <value id="ably-api" type="host">https://rest.ably.io</value>
                <value id="ably-internet-up" type="host">https://internet-up.ably-realtime.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="cloudinary-images" type="host">https://res.cloudinary.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
